<div id="loading">
  <i class="icon-refresh icon-spin icon-2x"></i>
</div>

<section id="empty-playlist">o_O This playlist has 0 videos... this is kinda weird.</section>

<section id="player">
  <aside id="share-playlist">
    <span id="share-on-twitter" class="icon-twitter tooltip" original-title="Share on twitter."></span>
    <span id="share-on-facebook" class="icon-facebook tooltip" original-title="Share on facebook."></span>
  </aside>

  <h2 id="current-video-title"></h2>

  <div id="ytplayerid"></div> 
  <ul id="playlist"></ul>
  <div class="clear"></div>

  <div id="player-controls">
    <div id="player-controls-right">
      <a href="#" class="shuffle button small tooltip" original-title="Shuffle"><span class="icon-random"></span></a>
      <a href="#" id="previous" class="button small tooltip" original-title="Previous">&nbsp;<span class="icon-step-backward"></span></a>
      <a href="#" id="next" class="button small tooltip" original-title="Next"><span class="icon-step-forward"></span>&nbsp;</a>
    </div>
    
    <div id="player-controls-left">
      <% if user_signed_in? %>
        <%= render :partial => 'custom_playlist_dropdown' %>
      <% end %>
    </div>

    <div class="clear"></div>
  </div>

</section>

<%= javascript_tag do %>
  Playlist.init(<%= search_options %>);
<% end if request.path.index("/similar/") || request.path.index("/video/") || request.path.index("/r/") ||
          request.path.index("/genre/")  || request.path.index("/just/") || @playlist_name %>
